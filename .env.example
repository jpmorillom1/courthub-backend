# Environment Variables for CourtHub Backend Services
# Copy to .env and adjust values as needed

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres
USER_DB_URL=jdbc:postgresql://postgres:5432/user_db
AUTH_DB_URL=jdbc:postgresql://postgres:5432/auth_db
COURT_DB_URL=jdbc:postgresql://postgres:5432/court_db
BOOKING_DB_URL=jdbc:postgresql://postgres:5432/booking_db
PAYMENT_DB_URL=jdbc:postgresql://postgres:5432/payment_db

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/courthub_analytics

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER_URI=http://localhost:8080
JWT_JWK_SET_URI=http://localhost:8080/.well-known/jwks.json

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Google OAuth (Optional for auth-service)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe Payment Configuration
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_SUCCESS_URL=http://localhost:3000/payment/success
STRIPE_CANCEL_URL=http://localhost:3000/payment/cancel
STRIPE_PRICE_PER_HOUR=50

# Mail Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# HiveMQ MQTT Configuration
HIVEMQ_BROKER_URL=mqtt://hivemq:1883
HIVEMQ_USERNAME=admin
HIVEMQ_PASSWORD=admin

# Firebase Configuration (for realtime notifications)
FIREBASE_DATABASE_URL=https://your-firebase-project.firebaseio.com
FIREBASE_CREDENTIALS_PATH=/app/config/firebase-service-account.json

# Slot Generation Configuration (booking-service)
SLOT_DURATION_MINUTES=60
SLOT_GENERATION_DAYS_FORWARD=30

# Service URLs (for internal communication)
AUTH_SERVICE_URL=http://auth-service:8080
USER_SERVICE_URL=http://user-service:8081
COURT_SERVICE_URL=http://court-service:8082
BOOKING_SERVICE_URL=http://booking-service:8083
REALTIME_ADAPTER_SERVICE_URL=http://realtime-adapter-service:8084
NOTIFICATION_SERVICE_URL=http://notification-service:8085
PAYMENT_SERVICE_URL=http://payment-service:8086
ANALYTICS_SERVICE_URL=http://analytics-service:8087

# API Gateway Configuration
API_GATEWAY_PORT=9000
API_GATEWAY_CONTEXT_PATH=/api

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_COURTHUB=DEBUG
